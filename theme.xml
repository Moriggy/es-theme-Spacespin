<theme>

	<formatVersion>4</formatVersion>

	<feature supported="carousel">
	
		<view name="system">
		
			<!-- Imagen de fondo estatica -->
			
			<image name="background" extra="true">
				<path>./_art/fondo.png</path>
				<maxSize>1 1</maxSize>
				<pos>0 0</pos>
				<zIndex>1</zIndex>
			</image>
			
			<!-- Logo de sistema -->
			
			<image name="logo">
				<path>./_art/logos/${system.theme}.png</path>
			</image>
			
			<!-- Modo de vista de los sistemas -->
			
			<carousel name="systemcarousel">
				<type>vertical_wheel</type>
				<pos>0.335 0</pos>
				<size>1 1</size>
				<logoScale>1.1</logoScale>
				<logoSize>0.2 0.5</logoSize>
				<color>00000000</color>
				<logoRotation>10</logoRotation>
				<logoRotationOrigin>-2 0.5</logoRotationOrigin>
				<maxLogoCount>7</maxLogoCount>
				<logoAlignment>center</logoAlignment>
				<zIndex>2</zIndex>
			</carousel>
			
			<!-- Puntero de sistemas -->

			<image name="logo2" extra="true">
				<tile>false</tile>
				<path>./_art/pointer/${system.theme}.png</path>
				<origin>1 0.5</origin>
				<pos>1 0.5</pos>
				<size>0.055 0.18</size>
				<color>FFFFFFFF</color>
				<zIndex>3</zIndex>
			</image>
					
			<!-- Numero de juegos del sistema -->
			
			<text name="systemInfo">		
				<backgroundColor>ffffff00</backgroundColor>
				<color>ffffff</color>
				<pos>0.33 0.54</pos>
				<size>0.980 0.050</size>
				<fontPath>./_art/STENCIL.TTF</fontPath>
				<fontSize>0.03</fontSize>
				<zIndex>2</zIndex>
			</text>
			
			<!-- Texto info sistema -->
			
			<helpsystem name="help">
				<pos>1 1</pos>
				<textColor>ffffff</textColor>
				<iconColor>ffffff</iconColor>
				<fontPath>./_art/STENCIL.TTF</fontPath>
				<fontSize>0.020</fontSize>
			</helpsystem>
			
		</view>
	
	</feature>
		
	<view name="basic, detailed, video">
	
		<!-- Fondo gamelist -->
		
		<image name="backgroundfilter" extra="true">		
			<pos>0 0</pos>
			<origin>0 0</origin>
			<size>1 1</size>
			<path>./_art/gamelist.png</path>
			<zIndex>1</zIndex>			
		</image>
		
		<!-- Logo sistema -->
		
		<image name="logo" extra="false">		
			<path>./_art/logos/${system.theme}.png</path>
			<pos>0.51 0.02</pos>
			<size>0.25 0.1</size>
			<zIndex>2</zIndex>			
		</image>
	
		<!-- Texto del sistema -->

		<helpsystem name="help">
			<pos>0.01 0.76</pos>
			<iconColor>FFFFFF</iconColor>
			<textColor>FFFFFF</textColor>
			<fontSize>0.02</fontSize>
			<fontPath>./_art/STENCIL.TTF</fontPath>
		</helpsystem>
	
	</view>
	
	<view name="basic">
		
		<!-- Posicion de listado de juegos -->
		
		<textlist name="gamelist">		
			<selectorImagePath>./_art/selector.png</selectorImagePath>
			<selectorColor>719CC6</selectorColor>
			<selectedColor>719CC6</selectedColor>
			<primaryColor>dee0e8</primaryColor>
			<secondaryColor>eac428</secondaryColor>
			<fontPath>./_art/STENCIL.TTF</fontPath>
			<forceUppercase>1</forceUppercase>
			<fontSize>0.03</fontSize>
			<alignment>left</alignment>
			<pos>0.628 0.135</pos>
			<size>0.352 0.8</size>
			<lineSpacing>1.475</lineSpacing>
			<horizontalMargin>0.05</horizontalMargin>
			<scrollSound>./_art/scroll.wav</scrollSound>
			<zIndex>3</zIndex>			
		</textlist>
		
		<!-- Posicion y tamaño imagen juego -->

		<image name="md_image">
			<maxSize>0.35 0.46</maxSize>
			<pos>0.2 0.4</pos>
			<zIndex>3</zIndex>
		</image>
		
	</view>
	
	<view name="detailed">
	
		<!-- Posicion y tamaño imagen juego -->

		<image name="md_image">
			<maxSize>0.35 0.46</maxSize>
			<pos>0.2 0.4</pos>
			<zIndex>3</zIndex>
		</image>
		
	</view>
	
	<feature supported="video">
	
		<view name="video">
		
			<!-- Posicion y tamaño del video juego -->

			<video name="md_video">
				<maxSize>0.35 0.46</maxSize>
				<pos>0.199 0.4</pos>
				<delay>0.8</delay>
				<showSnapshotNoVideo>true</showSnapshotNoVideo>
				<showSnapshotDelay>true</showSnapshotDelay>
				<zIndex>3</zIndex>
			</video>
			
			<image name="md_marquee">
				<pos>0.29 0.068</pos>
				<size>0.145 0.085</size>
				<zIndex>3</zIndex>
			</image>
			
		</view>
		
	</feature>
			
	<view name="detailed,video">
	
		<!-- Posicion de listado de juegos -->
		
		<textlist name="gamelist">
			<selectorImagePath>./_art/selector.png</selectorImagePath>
			<selectorColor>719CC6</selectorColor>
			<selectedColor>719CC6</selectedColor>
			<primaryColor>dee0e8</primaryColor>
			<secondaryColor>eac428</secondaryColor>
			<fontPath>./_art/STENCIL.TTF</fontPath>
			<forceUppercase>1</forceUppercase>
			<fontSize>0.03</fontSize>
			<alignment>left</alignment>
			<pos>0.628 0.135</pos>
			<size>0.352 0.8</size>
			<lineSpacing>1.475</lineSpacing>
			<horizontalMargin>0.05</horizontalMargin>
			<scrollSound>./_art/scroll.wav</scrollSound>
			<zIndex>3</zIndex>				
		</textlist>

		<!-- Metadatos -->
		
		<text name="md_lbl_rating, md_lbl_releasedate, md_lbl_developer, md_lbl_publisher, md_lbl_genre, md_lbl_players, md_lbl_lastplayed, md_lbl_playcount, md_lbl_favorite">
			<color>ffffff</color>
			<forceUppercase>1</forceUppercase>
			<fontPath>./_art/STENCIL.TTF</fontPath>
			<fontSize>0.02</fontSize>
			<size>0.12 0.04</size>
			<zIndex>3</zIndex>
		</text>
				
		<text name="md_rating, md_developer, md_publisher, md_genre, md_players, md_playcount, md_favorite ,md_releasedate, md_lastplayed">
			<color>ffffff</color>
			<forceUppercase>1</forceUppercase>
			<fontPath>./_art/STENCIL.TTF</fontPath>
			<fontSize>0.02</fontSize>
			<size>0.14 0.04</size>
			<zIndex>3</zIndex>
		</text>

		<!-- Descripcion juego -->
		
		<text name="md_description">
			<color>00d2f3</color>
			<pos>0.031 0.81</pos>
			<size>0.46 0.15</size>
			<fontPath>./_art/STENCIL.TTF</fontPath>
			<fontSize>0.018</fontSize>
			<forceUppercase>1</forceUppercase>
			<zIndex>3</zIndex>			
		</text>
		
		<!-- Posiciones info juegos -->
		
		<text name="md_lbl_rating">
			<pos>0.03 0.63</pos>
		</text>
		
		<rating name="md_rating">
			<pos>0.04 0.66</pos>
			<size>0.028 0.028</size>
			<filledPath>./_art/rating_empty.svg</filledPath>
			<unfilledPath>./_art/rating_filled.svg</unfilledPath>
		</rating>
		
		<text name="md_lbl_players">
			<pos>0.03 0.69</pos>
		</text>
		
		<text name="md_players">
			<pos>0.04 0.71</pos>			
		</text>
			
		<text name="md_lbl_genre">
			<pos>0.18 0.63</pos>
		</text>
		
		<text name="md_genre">
			<pos>0.19 0.66</pos>
		</text>
			
		<text name="md_lbl_releasedate">
			<pos>0.18 0.69</pos>
		</text>
		
		<datetime name="md_releasedate">
			<pos>0.19 0.71</pos>
		</datetime>
			
		<text name="md_lbl_developer">
			<pos>1 1</pos>
		</text>
		
		<text name="md_developer">
			<pos>1 1</pos>
		</text>
			
		<text name="md_lbl_publisher">
			<pos>1 1</pos>
		</text>
		
		<text name="md_publisher">
			<pos>1 1</pos>
		</text>
			
		<text name="md_lbl_lastplayed">
			<pos>1 1</pos>
		</text>
		
		<datetime name="md_lastplayed">
			<pos>1 1</pos>
		</datetime>
			
		<text name="md_lbl_playcount">
			<pos>1 1</pos>
		</text>
		
		<text name="md_playcount">
			<pos>1 1</pos>
		</text>
		
		<text name="md_lbl_favorite">
			<pos>1 1</pos>
		</text>
		
		<text name="md_favorite">
			<pos>1 1</pos>
		</text>
		
	</view>
	
</theme>
